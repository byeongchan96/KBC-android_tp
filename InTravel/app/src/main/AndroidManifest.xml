<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 위치 권한을 요청합니다. -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- 인터넷 및 카메라 권한을 요청합니다. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 외부 저장소 접근 권한을 요청합니다. -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 카메라 기능을 사용하는 것을 권장하지만 필수는 아닙니다. -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InTravel"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- 앱 시작 시 표시될 스플래시 화면 활동 -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!-- 메모 작성 활동 -->
        <activity
            android:name=".MainActivity_memowrite"
            android:exported="false" />

        <!-- 메모 목록 활동 -->
        <activity
            android:name=".MainActivity_memo"
            android:exported="true" />

        <!-- 메인 활동 -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- 투두리스트 활동 -->
        <activity
            android:name=".MainActivity_todolist"
            android:exported="true" />

        <!-- 상세 메인 활동 -->
        <activity
            android:name=".DetailMainActivity"
            android:exported="true" />

        <!-- 사진 전체 화면 보기 활동 -->
        <activity
            android:name=".PhotoFullActivity"
            android:exported="false" />

        <!-- 구글 지도 API 키 설정 (여기서 YOUR_API_KEY_HERE를 실제 API 키로 교체해야 합니다.) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY_HERE" />

        <!-- 구글 맵과 연동될 지도 활동 -->
        <activity
            android:name=".MapsActivity"
            android:exported="true"
            android:label="@string/title_activity_maps" />

        <!-- 파일 제공자 설정 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.intravel.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>